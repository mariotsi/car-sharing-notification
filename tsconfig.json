{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./out/",
    "sourceMap": true,
    "target": "ES6",
    "lib": ["dom", "es2021"],
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "**/*.spec.ts"]
}
